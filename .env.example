# Server Configuration
PORT=4000
NODE_ENV=production
CORS_ORIGIN=https://your-frontend-url.com

# JWT Configuration
JWT_ACCESS_SECRET=strong_production_secret_key_here
JWT_REFRESH_SECRET=another_strong_production_secret_key_here
JWT_ACCESS_EXPIRES_IN=6m
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration (Railway will provide these)
DB_HOST=railway-provided-host.mysql.railway.app
DB_PORT=3306
DB_USER=railway-provided-user
DB_PASS=railway-provided-password
DB_NAME=railway

# RabbitMQ Configuration (if you're using Railway's RabbitMQ plugin)
RABBITMQ_URL=amqps://railway-provided-rabbitmq-url
RABBITMQ_EXCHANGE=turnos.topic

# SMTP Configuration (if needed)
SMTP_HOST=smtp-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Security
BCRYPT_SALT_ROUNDS=12